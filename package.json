{
  "name": "env-checkup",
  "version": "0.0.1",
  "description": "A lightweight utility to validate and manage environment variables in Node.js projects with type safety and helpful error messages.",
  "keywords": [
    "env",
    "environment",
    "validator",
    "env-validator",
    "dotenv",
    "config",
    "environment variables",
    "validation",
    "schema",
    "type-safe",
    "nodejs",
    "typescript",
    "runtime-check",
    "safe-env",
    "env-check"
  ],
  "homepage": "https://github.com/tier3guy/Env-Checkup#readme",
  "bugs": {
    "url": "https://github.com/tier3guy/Env-Checkup/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tier3guy/Env-Checkup.git"
  },
  "license": "ISC",
  "author": "tier3guy",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && tsc",
    "format": "prettier --check .",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "verify": "npm run format && npm run lint && npm test",
    "prepare": "husky",
    "prepublishOnly": "npm run verify && npm run build"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "rimraf": "^6.1.0",
    "ts-jest": "^29.4.5",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  }
}