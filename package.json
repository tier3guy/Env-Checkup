{
  "name": "env-checkup",
  "version": "0.2.1",
  "description": "A lightweight utility to validate and manage environment variables in Node.js projects with type safety and helpful error messages.",
  "keywords": [
    "env",
    "environment",
    "validator",
    "env-validator",
    "dotenv",
    "config",
    "environment variables",
    "validation",
    "schema",
    "type-safe",
    "nodejs",
    "typescript",
    "runtime-check",
    "safe-env",
    "env-check"
  ],
  "homepage": "https://github.com/tier3guy/Env-Checkup#readme",
  "bugs": {
    "url": "https://github.com/tier3guy/Env-Checkup/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tier3guy/Env-Checkup.git"
  },
  "license": "ISC",
  "author": "tier3guy",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "env-checkup": "./dist/cli/index.js"
  },
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .ts",
    "test": "jest --config jest.config.4js",
    "clean": "rimraf dist",
    "prepare": "husky",
    "beautify": "npm run format && npm run lint",
    "build": "npm run beautify && npm run clean && tsc",
    "prepublishOnly": "npm run build",
    "init": "npx tsx src/cli/index.ts init",
    "validate": "npx tsx src/cli/index.ts validate",
    "docs": "cd ./docs && npm run start"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@types/chalk": "^0.4.31",
    "@types/commander": "^2.12.0",
    "@types/dotenv": "^6.1.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.0",
    "chalk": "^5.6.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "execa": "^9.6.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "rimraf": "^6.1.0",
    "ts-jest": "^29.4.5",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  },
  "dependencies": {
    "commander": "^14.0.2",
    "dotenv": "^17.2.3",
    "winston": "^3.18.3"
  }
}
